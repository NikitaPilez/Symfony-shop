{% extends "base.html.twig" %}

{% block content %}
    <h1 class="mt-5 text-center">Category {{ category.name }}</h1>
    <div class="container">
        <div class="row">
        {% for product in products %}
            <div class="col-md-4 p-3">
                <div class="card">
                    <img class="card-img-top" src="{{ product.photo }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">Color: {{ product.color }}</p>
                        <a href="{{ url('category', {categoryId : product.getCategory().id}) }}" class="card-text text-black-50">Category: {{ product.getCategory().name }}</a>
                        <p class="card-text">Price: {{ product.price }}$</p>
                        <a href="{{ url('product', {productId : product.id}) }}" class="btn btn-primary">See product</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}